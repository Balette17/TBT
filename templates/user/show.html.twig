
{% include 'header.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="display-4 text-center mb-4">User Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Uid</th>
                            <td>{{ user.uid }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Username</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Password</th>
                            <td>{{ user.password }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_user_index') }}"> 
                    View All Products
                </a>
                <a class="btn btn-outline-warning ms-2" href="{{ path('app_user_edit', {'id': user.id}) }}"> 
                    Edit
                </a>

                <a class="btn" href="{{ path('app_user_delete', {'id': user.id}) }}"> 
                    {{ include('user/_delete_form.html.twig') }} 
                </a>

            </div>
            </div>
        </div>
    </div>
{% endblock %}

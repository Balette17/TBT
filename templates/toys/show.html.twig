{% include 'header.html.twig' %}
{% block body %}
    <div class="container mt-4">
        <h1 class="display-4 text-center mb-4">Toys Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{toy.id}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Name</th>
                            <td>{{toy.tname}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Description</th>
                            <td>{{toy.tdesc}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Price</th>
                            <td>{{ toy.price }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Created</th>
                            <td>{{ toy.created ? toy.created|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_toys_index') }}"> 
                    View All Products
                </a>
                <a class="btn btn-outline-warning ms-2" href="{{ path('app_toys_edit', {'id': toy.id}) }}"> 
                    Edit
                </a>

                <a class="btn" href="{{ path('app_toys_delete', {'id': toy.id}) }}"> 
                    {{ include('toys/_delete_form.html.twig') }} 
                </a>

            </div>
            </div>
        </div>
    </div>
{% endblock %}
{% include 'footer.html.twig' %}
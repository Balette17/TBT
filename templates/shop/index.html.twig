{% include 'header.html.twig' %}
<main id="main">
  <!-- ======= Portfolio Section ======= -->
  <section id="portfolio" class="portfolio">
    <div class="container">

      <div class="section-title" data-aos="fade-in" data-aos-delay="100">
        <section>
            <h1>Welcome to TBTSHOP</h1>
        </section>
        
        <h2>At TBTSHOP, we believe in the power of play and the boundless joy it brings to both kids and the young at heart. Our online store is your ultimate destination for a delightful array of toys that inspire creativity, spark curiosity, and make every moment memorable.</h2>
        <p> Below are some of our new products</p>
      </div>

      <div class="row portfolio-container" data-aos="fade-up">
        {% for toy in toys %}
        
        <div class="col-lg-4 col-md-6 portfolio-item filter-app">
          <h3>{{ toy.tname }}</h3>
            <p>Price: ${{ toy.price }}</p>
            <div class="portfolio-wrap">
              <img src="{{asset('uploads/'~toy.image)}}" class="img-fluid" alt="">
              <div class="portfolio-links">
                  <a href="{{ path('buy_product', {'id': toy.id})  }}"><i class="bx bx-plus"></i></a>
                  <a href="{{ path('show_detail_toy', {'id': toy.id}) }}" title="More Details"><i
                      class="bx bx-link"></i></a>
              </div>
            </div>
        </div>
      
      {% endfor %}
      </div>
    </div>
  </section>
</main>
    
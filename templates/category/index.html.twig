{% extends 'base.html.twig' %}

{% block title %}Category Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Category</h1>

        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.catname }}</td>
                    <td>
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-outline-info btn-sm">Show</a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-warning btn-sm">Edit</a>
                        <a href="{{ path('app_category_delete', {'id': category.id}) }}" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_category_new') }}" class="btn btn-success">Create New Category</a>
    </div>
{% endblock %}
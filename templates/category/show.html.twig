
{% include 'header.html.twig' %}
{% block body %}
    <div class="container mt-4">
        <h1 class="display-4 text-center mb-4">Category Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Category Name</th>
                            <td>{{ category.catname }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_category_index') }}"> 
                    View All Products
                </a>
                <a class="btn btn-outline-warning ms-2" href="{{ path('app_category_edit', {'id': category.id}) }}"> 
                    Edit
                </a>

                <a class="btn" href="{{ path('app_user_delete', {'id': category.id}) }}"> 
                    {{ include('category/_delete_form.html.twig') }} 
                </a>

            </div>
            </div>
        </div>
    </div>
{% endblock %}

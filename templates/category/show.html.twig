{% block title %}Category{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="display-4 text-center mb-4">Category Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Category Name</th>
                            <td>{{ category.catname }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center">
                    <a href="{{ path('app_category_index') }}" class="btn btn-secondary mt-3">Back to List</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning mt-3 ms-2">Edit</a>
                    
                </div>
            </div>
        </div>

        <div class="mt-4">

            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
{% include 'footer.html.twig' %}